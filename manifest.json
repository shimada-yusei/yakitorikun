{
	"manifest_version": 2,
	"name": "Yakitorikun",
	"version": "1.0",

	"description": "Deny access to Twitter.",
	"icons": {
	  "48": "image/icon-48.png"},

	"content_scripts": [
		{
			"matches": ["*://*.twitter.com/*"],
			"js":["stop_access.js"]
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": {
			"19": "image/icon-48.png",
			"38": "image/icon-48.png"
		}
	}
}
